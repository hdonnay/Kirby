<!DOCTYPE html>
<html>
    <head>
        <title>Kirby Comic Grabber</title>
        %= stylesheet '/default.css'
    </head>
    <body>
        <div id="header">
            %= include 'assets/header'
        </div>
        <div id="wrapper">
            <div id="nav">
                %= include 'assets/nav'
            </div>
            <div id="content">
                % if (my $message = flash 'message') {
                <h3 class="popup"> <%= $message %> </h3>
                % }
                <%= content %>
            </div>
        </div>
        <div id="footer">
            %= include 'assets/footer'
        </div>
    </body>
</html>
