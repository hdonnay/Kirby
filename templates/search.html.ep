% layout 'default';
% if (my $message = flash 'message') {
<h3 class="popup"> <%= $message %> </h3>
% }

% if (my $results = flash 'results') {
<h3>Query Results:</h3>
<pre>
% for my $line (@{$results}) {
<%= $line %>
% }
<%= dumper $results %>
</pre>
% }
% else {
%= form_for search => begin
<div id="search">Search: <%= text_field 'q'%><%= submit_button 'Search' %></div>
%= end
% }
