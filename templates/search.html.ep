% layout 'search';
 % if (my $results = flash 'results') {
 %   foreach (@$results) {
        <%== displayBook $_ %>
 %   }
<pre>
<%= dumper $results %>
</pre>
 % }
 % else {
 %= form_for search => begin
<div class="search">Search: <%= text_field 'q'%><%= submit_button 'Search' %></div>
 %= end
 % }
